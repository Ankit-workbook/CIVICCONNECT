rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Anyone can read reports
      allow read: if true;
      
      // Authenticated users can create reports
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.images.size() <= 5 &&
                      request.resource.data.category in ['pothole', 'garbage', 'water', 'streetlight', 'spitting', 'other'] &&
                      request.resource.data.status == 'pending';
      
      // Only admins or report owner can update
      allow update: if isAdmin() || 
                       (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isAuthenticated() && 
                     (request.auth.uid == userId || isAdmin());
      
      // Users can create their own profile
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.data.role == 'citizen';
      
      // Users can update their own profile (except role)
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.data.role == resource.data.role;
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Analytics collection (admin only)
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
